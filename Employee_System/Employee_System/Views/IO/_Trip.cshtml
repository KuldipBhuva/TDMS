@using EMSDomain.ViewModel.Vehicle
@model List<TripModel>


<div class="col-sm-12" style="border: solid 1px; box-shadow: 1px 1px 10px 1px grey; margin-top: 10px; margin-bottom: 10px; padding-bottom: 5px;">

    <div class="col-sm-12" style="height: 5px;"></div>
    <div class="control-label col-sm-2"><b>Total Trip : </b></div>
    <span class="label label-danger">@Model.Count()</span>
    <div class="col-sm-12" style="height: 5px;"></div>
    @{int count = 0;

      
        <table class="table" id="tbl">
            <tr>
                <th>Sr#</th>
                <th>Code</th>
                <th>Trip</th>
                <th>Date</th>
                <th>Days</th>
                <th>Vehicles</th>
            </tr>
            <tbody>
                @foreach (var i in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@i.OINo</td>
                        <td>@i.FCity - @i.TCity</td>
                        <td>@i.DDtTime - @i.RDtTime</td>
                        <td>@i.TotalDays</td>
                        <td>@i.TotalVehicle</td>
                    </tr>
                }
            </tbody>
        </table>   
@*<div class="col-sm-8"><b>@count.</b> @i.OINo @i.FCity-@i.TCity</div><div class="col-sm-4">@i.DDtTime-@i.RDtTime</div>*@
    }

